# Environment Configuration for NAMASTE & ICD-11 TM2 Integration API

# Application Settings
APP_NAME=NAMASTE-ICD11-TM2-API
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database Configuration - MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=namaste_icd11_db
MONGODB_MIN_CONNECTIONS=10
MONGODB_MAX_CONNECTIONS=100

# WHO ICD-11 API Configuration (2025)
WHO_ICD_API_BASE_URL=https://icd.who.int/icdapi
WHO_ICD_API_KEY=your_who_icd_api_key_here
WHO_ICD_API_VERSION=v2
WHO_CLIENT_ID=your_who_client_id
WHO_CLIENT_SECRET=your_who_client_secret

# ABHA (Ayushman Bharat Digital Mission) Configuration
ABHA_BASE_URL=https://dev.abdm.gov.in
ABHA_CLIENT_ID=your_abha_client_id
ABHA_CLIENT_SECRET=your_abha_client_secret
ABHA_SCOPE=abha-enrol
ABHA_REDIRECT_URI=http://localhost:8000/auth/abha/callback

# NAMASTE Portal Configuration
NAMASTE_PORTAL_URL=https://namaste.ayush.gov.in
NAMASTE_API_KEY=your_namaste_api_key

# JWT Configuration for ABHA OAuth 2.0
JWT_SECRET_KEY=your_super_secret_jwt_key_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# FHIR R4 Configuration
FHIR_BASE_URL=http://localhost:8000/fhir
FHIR_VERSION=4.0.1
TERMINOLOGY_SERVICE_URL=http://localhost:8000/fhir

# Encryption Configuration for ABHA
RSA_PUBLIC_KEY_PATH=config/keys/abha_public.pem
RSA_PRIVATE_KEY_PATH=config/keys/abha_private.pem

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Audit & Compliance (India EHR Standards 2016)
AUDIT_LOG_ENABLED=True
AUDIT_LOG_LEVEL=INFO
CONSENT_TRACKING_ENABLED=True
VERSION_TRACKING_ENABLED=True

# AI/ML Configuration for Code Mapping
ML_MODEL_PATH=models/
SIMILARITY_THRESHOLD=0.85
MAPPING_CONFIDENCE_THRESHOLD=0.90

# External Service Timeouts
HTTP_TIMEOUT_SECONDS=30
WHO_API_TIMEOUT_SECONDS=45
ABHA_API_TIMEOUT_SECONDS=30

# Development Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Production Override (set in production environment)
# DEBUG=False
# MONGODB_URL=mongodb://mongo-cluster:27017
# FHIR_BASE_URL=https://api.your-domain.com/fhir
# JWT_SECRET_KEY=production_secret_key
# CORS_ORIGINS=["https://your-frontend-domain.com"]